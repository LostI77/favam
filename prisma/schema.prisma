generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}
model User {
  id        Int @id @default(autoincrement())
  username  String
  fullName  String
  email     String @unique
  age       Int
  password  String
  dni       String @unique
  birthDate DateTime
  createAt  DateTime @default(now())
  role      String   @default("user")
}